{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2020",
    "module": "es2020",
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
